{
    "name": "simple-mvc-framework/framework",
    "type": "project",
    "description": "Framework for PHP 5.5+",
    "homepage": "https://github.com/simple-mvc-framework/framework",
    "license": "MIT",
    "authors": [
        {
            "name": "David Carr",
            "email": "dave@daveismyname.com",
            "homepage": "http://daveismyname.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.5.0",
        "doctrine/inflector": "1.0.*",
        "phpmailer/phpmailer": "5.2.*",
        "siriusphp/validation": "~2.0",
        "siriusphp/filtration": "~1.2",
        "siriusphp/input": "dev-master",
        "lichtner/fluentpdo": "dev-master",
        "phpfastcache/phpfastcache": "3.0.*"
    },
    "require-dev": {
        "phpunit/phpunit": "5.1.3",
        "phpunit/php-code-coverage": "^3",
        "satooshi/php-coveralls": "0.7.*"
    },
    "autoload": {
        "psr-4": {
            "Nova\\" : "system/",
            "App\\" : "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nova\\Tests\\": "tests/Nova/Tests"
        }
    },
    "archive": {
        "exclude": ["!vendor", "tests", "*phpunit.xml", ".travis.yml", "composer.phar"]
    }
}
